<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marketplace">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/market_stand"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material">
        <activity android:name=".ui.NewCategoryActivity"
            android:theme="@style/Theme.Material">

        </activity>
        <activity
            android:name=".ui.SellActivity"
            android:label="SELL"
            android:theme="@style/Theme.Material">

        </activity>
        <activity android:name=".ui.LoginActivity"
            android:theme="@style/Theme.Material"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BuyActivity"
            android:label="@string/title_activity_buy"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.RegisterActivity" />
        <activity
            android:name=".ui.StartActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        </activity>
    </application>

</manifest>